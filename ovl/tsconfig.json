{
  "compilerOptions": {
    "module": "es6",
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,

    "moduleResolution": "node",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "validate": false
      }
    ]
  },
  "exclude": [
    "**/_patched_node_modules",
    "**/updateCheck",
    "**/node_modules",
    "**/dist",
    "**/*.js"
  ]
}
